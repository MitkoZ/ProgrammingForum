@model List<ProgrammingForum.ViewModels.ViewQuestionViewModel>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>My Questions</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @foreach (var question in Model)
        {
            <div class="form-group">
                @Html.LabelFor(model => question.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => question.Title, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => question.DateAsked, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => question.DateAsked, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to Home Page", "Index", "Home")
</div>
