@model ProgrammingForum.ViewModels.AskQuestionViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Edit Question</h4>
    <hr />
    @Html.HiddenFor(model => model.QuestionId)
    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.QuestionText, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.QuestionText, 20, 100, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.QuestionText, "", new { @class = "text-danger" })
        </div>
    </div>

    <h2>Choose Categories</h2>
    @for (int i = 0; i < Model.CheckedCategories.Count; i++) //already checked
    {
        <div style="border:solid black 1px; margin:10px;" class="col-md-5">
            <div class="form-group">
                <input type="checkbox" name="ChosenCategoriesIds" value="@Model.CheckedCategories[i].Id" checked/>
                <div>
                    <div style="background-color:pink; display:inline-block;">
                        <b>Category Name: </b>@Model.CheckedCategories[i].CategoryName
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <div style="background-color:greenyellow;">
                        <b>Description: </b>@Model.CheckedCategories[i].Description
                    </div>
                </div>
            </div>
        </div>
    }


    @for (int i = 0; i < Model.AllCategories.Count; i++) //the rest categories (unchecked ones)
    {
        <div style="border:solid black 1px; margin:10px;" class="col-md-5">
            <div class="form-group">
                <input type="checkbox" name="ChosenCategoriesIds" value="@Model.AllCategories[i].Id" />
                <div>
                    <div style="background-color:pink; display:inline-block;">
                        <b>Category Name: </b>@Model.AllCategories[i].CategoryName
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <div style="background-color:greenyellow;">
                        <b>Description: </b>@Model.AllCategories[i].Description
                    </div>
                </div>
            </div>
        </div>
    }


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Home Page", "Index", "Home")
</div>
